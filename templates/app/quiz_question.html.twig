{% extends "base.html.twig" %}

{% block title %}{% endblock %}
{% block body %}
	<h1>Liste des questions de quiz</h1>
	<form name="form1" method="post" action="">
		<div class="row">
			{% for question in questions %}
				<div class="col-md-4 col-xs-12">
					<div
						class="card card-cascade wider">
						<!-- Card content -->
						<div
							class="card-body card-body-cascade">
							<!-- Title -->
							<p class="card-title">
								Question
								{{ question.id }}
								:
								{{ question.label }}
							</p>
							{% for propo in question.propositions %}
								<div class="form-check">
									<input class="form-check-input" type="radio" name="{{ question.id }}" id="question{{ question.id }}" value="{{ propo.id }}">
									<label class="form-check-label" for="{{ question.id }}">
										{{ propo.label }}
									</label>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<button type="submit" class="btn btn-outline-info" style="margin-top: 30px">Soumettre</button>
	</form>
{% endblock %}
